<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_newNote"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_title_newNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="Title"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <EditText
        android:id="@+id/editText_title_newNote"
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:layout_marginStart="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_title_newNote"
        app:layout_constraintStart_toEndOf="@+id/textView_title_newNote"
        app:layout_constraintTop_toTopOf="@+id/textView_title_newNote" />

    <TextView
        android:id="@+id/textView_date_newNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Date"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView_title_newNote"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_newNote" />

    <EditText
        android:id="@+id/editText_date_newNote"
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_date_newNote"
        app:layout_constraintEnd_toEndOf="@+id/editText_title_newNote"
        app:layout_constraintStart_toStartOf="@+id/editText_title_newNote"
        app:layout_constraintTop_toTopOf="@+id/textView_date_newNote"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/textView_description_newNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Description"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView_date_newNote"
        app:layout_constraintTop_toBottomOf="@+id/textView_date_newNote" />

    <EditText
        android:id="@+id/editText_description_newNote"
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_description_newNote"
        app:layout_constraintStart_toStartOf="@+id/editText_date_newNote"
        app:layout_constraintTop_toTopOf="@+id/textView_description_newNote" />


</androidx.constraintlayout.widget.ConstraintLayout>